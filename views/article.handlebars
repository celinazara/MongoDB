<div class="row">
    <h3 class="card"> {{article.title}}</h3>
    <h5 class="card-panel articleBody">{{body}}</h5>
</div>

<div class="row">
    <div class="col s2"></div>
    <form action="/comment/{{article._id}}" method="POST" class="card-panel col s8">
        <h5>Leave a Comment:</h5>
        <div class="row">
            <div class="input-field">
                <i class="material-icons prefix">Comment</i>
                <input id="icon_telephone" type="text" placeholder="comment" name="comment" class="validate active">
            </div>
        </div>

        <!--BUTTON-->
        <div class="row">
            <div class="input-field">
                <center><input class="btn add-comment-button green lighten-1" type="submit" value="Submit"></center>
            </div>
        </div>
    </form>
</div>

<!--COMMENT SECTION-->
<div class="row">
    <div class="col s2"></div>
    <div class="col s8">
        <h5>Comments:</h5>
            {{#if article.comment}}
                {{#each article.comment}}
                    <div class="card">
                        <p id="nameComment">{{name}}</p>
                        <p>{{body}}</p>
                    </div>
                {{/each}}
                {{else}}
                <p>No Comments yet</p>
                {{/if}}
    </div>
</div>